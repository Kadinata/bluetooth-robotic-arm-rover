<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding = "8dp"
    android:background="@drawable/bcg_new"
    android:orientation="horizontal" 
    android:weightSum="100"
  	>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="55" >

	    <Button
	        android:id="@+id/button_BB"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignParentBottom="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginBottom="12dp"
	        android:layout_marginRight="16dp"
	        android:background="@drawable/button_cw" />

	    <Button
	        android:id="@+id/button_BA"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignBaseline="@+id/button_BB"
	        android:layout_alignBottom="@+id/button_BB"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="28dp"
	        android:background="@drawable/button_ccw" />

	    <TextView
	        android:id="@+id/textView5"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/button_BB"
	        android:layout_alignBottom="@+id/button_BB"
	        android:layout_centerHorizontal="true"
	        android:text="[  Base  ]"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <Button
	        android:id="@+id/button_SB"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_above="@+id/button_BB"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp"	        
	        android:background="@drawable/button_down" />

	    <Button
	        android:id="@+id/button_SA"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignBaseline="@+id/button_SB"
	        android:layout_alignBottom="@+id/button_SB"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="28dp"
	        android:background="@drawable/button_up" />

	    <TextView
	        android:id="@+id/textView4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/button_SB"
	        android:layout_alignBottom="@+id/button_SB"
	        android:layout_centerHorizontal="true"
	        android:text="[ Shoulder ]"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <Button
	        android:id="@+id/button_EB"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_above="@+id/button_SB"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp"	        
	        android:background="@drawable/button_down" />

	    <Button
	        android:id="@+id/button_EA"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignBaseline="@+id/button_EB"
	        android:layout_alignBottom="@+id/button_EB"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="28dp"	        
	        android:background="@drawable/button_up" />

	    <TextView
	        android:id="@+id/textView3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/button_EB"
	        android:layout_alignBottom="@+id/button_EB"
	        android:layout_centerHorizontal="true"
	        android:text="[ Elbow ]"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <Button
	        android:id="@+id/button_WB"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_above="@+id/button_EB"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp"	        
	        android:background="@drawable/button_down" />

	    <Button
	        android:id="@+id/button_WA"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignBaseline="@+id/button_WB"
	        android:layout_alignBottom="@+id/button_WB"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="28dp"        
	        android:background="@drawable/button_up" />

	    <TextView
	        android:id="@+id/textView2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/button_WB"
	        android:layout_alignBottom="@+id/button_WB"
	        android:layout_centerHorizontal="true"
	        android:text="[ Wrist ]"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <Button
	        android:id="@+id/button_GB"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_above="@+id/button_WB"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="16dp"	        
	        android:background="@drawable/button_close" />

	    <Button
	        android:id="@+id/button_GA"
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:layout_alignBaseline="@+id/button_GB"
	        android:layout_alignBottom="@+id/button_GB"
	        android:layout_alignParentLeft="true"
	        android:layout_marginLeft="28dp"   
	        android:background="@drawable/button_open" />

	    <TextView
	        android:id="@+id/textView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBaseline="@+id/button_GB"
	        android:layout_alignBottom="@+id/button_GB"
	        android:layout_centerHorizontal="true"
	        android:text="[ Grip ]"
	        android:textAppearance="?android:attr/textAppearanceMedium" />

	    <ToggleButton
	        android:id="@+id/tb_led"
	        android:layout_width="180dp"
	        android:layout_height="36dp"
	        android:layout_alignLeft="@+id/button_GA"
	        android:layout_alignParentTop="true"
	        android:layout_toLeftOf="@+id/button_GB"
	        android:background="@drawable/tb_led"
	        android:textOff=""
	        android:textOn="" />

	</RelativeLayout>
	
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_weight="45"
	    android:orientation="vertical" >

	    <com.robotics.btcontrol.ControllerView
	        android:id="@+id/cv_joystick"
	        android:layout_width="wrap_content"
	        android:layout_height="256dp" />

	    <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content" >

	        <Button
	            android:id="@+id/button_Connect"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:text="Connect" />

	        <TextView
	            android:id="@+id/tv_ConnectState"
	            android:layout_width="wrap_content"
	            android:layout_height="16dp"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="50dp"
	            android:text="Not Connected" />

	    </RelativeLayout>

	</LinearLayout>

</LinearLayout>